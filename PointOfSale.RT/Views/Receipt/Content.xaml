    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <ItemsControl x:Name="Products" Style="{StaticResource PointOfSaleContent}" Visibility="{Binding ContentVisibility}">
        </ItemsControl>
    </Grid>
</UserControl>
